<Window x:Class="Caro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Caro"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800" Loaded="Window_Loaded">
    <Canvas x:Name="UICanvas" Margin="10">
        <Menu>
            <Button Content="New Game"  Click="NewGame_Click" Width="100" Height="30" FontSize="16"/>
            <Button Content="Save"  Click="Save_Click" Width="100" Height="30" FontSize="16"/>
            <Button Content="Load"  Click="Load_Click" Width="100" Height="30" FontSize="16"/>
        </Menu>
    </Canvas>
</Window>
